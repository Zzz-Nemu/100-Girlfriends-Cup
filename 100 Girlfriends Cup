            <span class="nav-link" onclick="switchPage('page3')">2nd Round</span>
        </div>
    </section>

    <script>
        // --- SYSTEM CONSTANTS ---
        const ADMIN_PASS = "Saudi_18_100";
        let isAdminMode = false;
        let publicResults = { r1: false, r2: false, ko: false };

        // --- NAVIGATION ---
        function switchPage(pageId) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            document.getElementById(pageId).classList.add('active');
            window.scrollTo(0,0);
        }

        // --- ADMIN AUTHENTICATION ---
        function toggleAdminMenu() {
            const menu = document.getElementById('adminMenu');
            menu.style.display = (menu.style.display === 'block') ? 'none' : 'block';
        }

        function showPasswordField() {
            document.getElementById('passwordSection').style.display = 'block';
        }

        function verifyAdmin() {
            const pass = document.getElementById('adminPass').value;
            const err = document.getElementById('adminError');
            if(pass === ADMIN_PASS) {
                isAdminMode = true;
                document.body.classList.add('admin-active');
                document.getElementById('modeDisplay').innerText = "Admin mode";
                document.getElementById('adminMenu').style.display = 'none';
                renderTournamentContent();
            } else {
                err.innerText = "Oops! You're not the Admin.";
            }
        }

        function setMode(mode) {
            if(mode === 'viewer') {
                isAdminMode = false;
                document.body.classList.remove('admin-active');
                document.getElementById('modeDisplay').innerText = "Viewers mode";
                document.getElementById('adminMenu').style.display = 'none';
                renderTournamentContent();
            }
        }

        // --- TOURNAMENT LOGIC ---
        function renderTournamentContent() {
            // Render 1st Round
            const r1 = document.getElementById('r1-groups');
            r1.innerHTML = '';
            ['A','B','C','D','E','F'].forEach(grp => {
                r1.innerHTML += createGroupHTML(`Group ${grp}`, 6, 'r1');
            });

            // Render 2nd Round
            const r2 = document.getElementById('r2-groups');
            r2.innerHTML = '';
            ['A','B','C','D'].forEach(grp => {
                r2.innerHTML += createGroupHTML(`Group ${grp}`, 3, 'r2');
            });
        }

        function createGroupHTML(name, count, roundKey) {
            const isVisible = isAdminMode || publicResults[roundKey];
            let html = `<div class="group-box"><div class="group-title">${name}</div>`;
            
            if(isAdminMode) {
                html += `<div class="admin-controls">
                    <label style="font-size:12px;"><input type="checkbox" onchange="togglePublic('${roundKey}')"> Public Results</label><br>
                    <button style="font-size:10px;" onclick="alert('Group settings opened')">Rearrange</button>
                    <button style="font-size:10px;" onclick="alert('Voting Opened for 24h')">Open Voting</button>
                </div>`;
            }

            if(isVisible) {
                html += `<div style="font-size:14px;">Rankings:<br>`;
                for(let i=1; i<=count; i++) html += `${i}. Participant ${i} (0 W, 0 V)<br>`;
                html += `</div>`;
            } else {
                html += `<div style="font-size:12px; color:gray;">Results hidden until voting ends.</div>`;
            }
            return html + `</div>`;
        }

        function togglePublic(key) {
            publicResults[key] = !publicResults[key];
            renderTournamentContent();
        }

        function viewResults(round) {
            if(!isAdminMode && !publicResults[round]) {
                alert("Results for this round are still being finalized by the Admin.");
            } else {
                renderTournamentContent();
            }
        }

        // INITIALIZE
        renderTournamentContent();
    </script>
</body>
</html>
